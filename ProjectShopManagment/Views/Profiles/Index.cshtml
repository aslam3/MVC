@model ProjectShopManagment.ViewModel.ProfileVM
@{
    ViewBag.Title = "Index";
}

<h2>Profile</h2>
<table cellspacing="4" cellpadding="5" width="500">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Email)

        </th>
        <td>

            @Html.DisplayFor(m => m.Email, new { @disabled = true })
        </td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(m => m.UserName) </td>
        <td>@Html.DisplayFor(m => m.UserName)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(m => m.Fullname) </td>
        <td>@Html.DisplayFor(m => m.Fullname)</td>

    </tr>
    <tr>
        <td>@Html.DisplayNameFor(m => m.Age) </td>
        <td>@Html.DisplayFor(m => m.Age)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(m => m.Address) </td>
        <td>@Html.DisplayFor(m => m.Address)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(m => m.Phonenumber) </td>
        <td>@Html.DisplayFor(m => m.Phonenumber)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(m => m.Picture) </td>
        @if (Model.Picture != null)
        {
            <td><img src="@Url.Content(Model.Picture)" height="80" width="80" /></td>
        }
    </tr>
</table>
@Html.ActionLink("Edit", "Edit", "Profiles", new { name = Model.UserId }, null)
